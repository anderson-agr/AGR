<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AGR.Views.HomeView">
  <StackLayout>
    <Button Text="Cadastrar" x:Name="btnCadastrar"  Command="{Binding CadastrarCommand}"></Button>
    <Button Text="Listar" x:Name="btnListar" Command="{Binding CarregaCommand}"></Button>
    <Button x:Name="btnGravaAudio" Text="Gravavação de audio"  Command="{Binding GravarCommand}" />
    <Button x:Name="btnVideo" Text="Videos" Command="{Binding VideosCommand}" />
    <Button x:Name="btnFoto" Text="Fotos" Command="{Binding FotosCommand}" />

    <Label Text="Red"></Label>
    <Slider Maximum="1" Minimum="0" x:Name="SliderRed" ValueChanged="Slider_OnValueChanged"></Slider>
    <Label Text="Green"></Label>
    <Slider Maximum="1" Minimum="0" x:Name="SliderGreen" ValueChanged="Slider_OnValueChanged"></Slider>
    <Label Text="Blue"></Label>
    <Slider Maximum="1" Minimum="0" x:Name="SliderBlue" ValueChanged="Slider_OnValueChanged"></Slider>
  </StackLayout>
</ContentPage>